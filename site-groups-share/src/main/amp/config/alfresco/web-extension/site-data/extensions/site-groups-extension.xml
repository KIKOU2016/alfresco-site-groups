<extension>
	<modules>
		<module>
			<id>Site Groups</id>
			<version>1.0</version>
			<auto-deploy>true</auto-deploy>  
			<configurations>
                <config evaluator="string-compare" condition="WebFramework" replace="false">
                    <web-framework>
                        <dojo-pages>
                            <packages>
                                <package name="custom-site-groups" location="js/site-groups"/>
                            </packages>
                        </dojo-pages>
                    </web-framework>
                </config>
            </configurations>
			<customizations>
				<customization>
					<targetPackageRoot>org.alfresco.share.header</targetPackageRoot>
					<sourcePackageRoot>es.keensoft.alfresco.share-header</sourcePackageRoot>
				</customization>
			</customizations>
		</module>
	</modules>
</extension>